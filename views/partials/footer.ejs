<!-- Scripts below footer -->
<script src="/js/notification.js"></script>
<script src="/js/web3-utils.js"></script>
<script src="/js/transaction-handler.js"></script>

<script>
    // Initialize notification handler when DOM is loaded
    document.addEventListener('DOMContentLoaded', function() {
        if (window.notificationHandler) {
            window.notificationHandler.init();
        }
        
        // Initialize transaction handler if available
        if (window.transactionHandler) {
            window.transactionHandler.init().then(function(success) {
                if (success) {
                    console.log('Web3 and transaction handler initialized successfully');
                    document.dispatchEvent(new CustomEvent('web3-initialized'));
                }
            }).catch(function(error) {
                console.error('Failed to initialize transaction handler', error);
            });
        }
    });
</script>